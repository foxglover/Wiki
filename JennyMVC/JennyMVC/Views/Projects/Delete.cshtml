@model JennyMVC.Project

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Project Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.project_name)
        </dd>

        <dt>
            @Html.Label("Predicted Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_start)
        </dd>

        <dt>
            @Html.Label("Predicted Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_finish)
        </dd>

        <dt>
            @Html.Label("Actual Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_start)
        </dd>

        <dt>
            @Html.Label("Actual Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_finish)
        </dd>

        <dt>
            @Html.Label("Predicted Cost")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_cost)
        </dd>

        <dt>
            @Html.Label("Actual Cost")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_cost)
        </dd>

        <dt>
            @Html.Label("Client Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.client_name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Project List", "Index")
        </div>
    }
</div>
