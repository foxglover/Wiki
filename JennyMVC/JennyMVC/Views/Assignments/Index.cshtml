@model IEnumerable<JennyMVC.Assignment>

@{
    ViewBag.Title = "Index";
}

<h2>Assignments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Task Name")
        </th>
        <th>
            @Html.Label("Predicted Start")
        </th>
        <th>
            @Html.Label("Actual Start Finish")
        </th>
        <th>
            @Html.Label("Predicted Finish")
        </th>
        <th>
            @Html.Label("Actual Finish")
        </th>
        <th>
            @Html.Label("Predicted Cost")
        </th>
        <th>
            @Html.Label("Actual Cost")
        </th>
        <th>
            @Html.Label("Sequence Number")
        </th>
        <th>
            @Html.Label("Associated Activity")
        </th>
        <th>
            @Html.Label("Staff Email")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.task_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pred_start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.act_start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pred_finish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.act_finish)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pred_cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.act_cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.task_sequence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activity.activity_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.staff_email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.taskID }) |
            @Html.ActionLink("Details", "Details", new { id=item.taskID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.taskID })
        </td>
    </tr>
}

</table>
