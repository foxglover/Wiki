@model JennyMVC.Assignment

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Task Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.task_name)
        </dd>

        <dt>
            @Html.Label("Predicted Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_start)
        </dd>

        <dt>
            @Html.Label("Actual Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_start)
        </dd>

        <dt>
            @Html.Label("Predicted Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_finish)
        </dd>

        <dt>
            @Html.Label("Actual Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_finish)
        </dd>

        <dt>
            @Html.Label("Predicted Cost in Hours")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_cost)
        </dd>

        <dt>
            @Html.Label("Actual Cost in Hours")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_cost)
        </dd>

        <dt>
            @Html.Label("Sequence Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.task_sequence)
        </dd>

        <dt>
            @Html.Label("Associated Activity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Activity.activity_name)
        </dd>

        <dt>
            @Html.Label("Staff ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Staff.staffID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Assignment List", "Index")
        </div>
    }
</div>
