@model JennyMVC.Activity

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Activity</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Activity Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.activity_name)
        </dd>

        <dt>
            @Html.Label("Predicted Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_start)
        </dd>

        <dt>
            @Html.Label("Predicted Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_finish)
        </dd>

        <dt>
            @Html.Label("Actual Start Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_start)
        </dd>

        <dt>
            @Html.Label("Actual Finish Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.act_finish)
        </dd>

        <dt>
            @Html.Label("Predicted Cost in Hours")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pred_cost)
        </dd>

        <dt>
            @Html.Label("Actual Cost in Hours")

        <dd>
            @Html.DisplayFor(model => model.act_cost)
        </dd>

        <dt>
            @Html.Label("Sequence Number")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.activity_sequence_no)
        </dd>

        <dt>
            @Html.Label("Project Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.project_name)
        </dd>

        <dt>
            @Html.Label("Staff Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Staff.staff_email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Activity List", "Index")
        </div>
    }
</div>
