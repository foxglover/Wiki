@model IEnumerable<JennyMVC.Client>

@{
    ViewBag.Title = "Clients: Mobile View";
}

<h2>Clients</h2>


<p>

    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Client Name")
        </th>
        <th>
            @Html.Label("Client Contact Details")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.client_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_contact)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.clientId }) |
                @Html.ActionLink("Details", "Details", new { id = item.clientId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.clientId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_contact)
            </td>
        </tr>
    }
 
</table>
